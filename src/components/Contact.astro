---
// Sección de contacto
import Section from './ui/Section.astro';
import Card from './ui/Card.astro';
import Button from './ui/Button.astro';
import type { SocialLink } from '../types';

// Enlaces sociales (se pueden personalizar)
const socialLinks: SocialLink[] = [
  // { href: '#', label: 'Twitter', icon: 'twitter' },
  // { href: '#', label: 'Instagram', icon: 'instagram' },
  // { href: '#', label: 'Facebook', icon: 'facebook' }
];
---

<Section id="contact" background="yellow">
  <div class="text-center">
    <h2 class="text-3xl sm:text-4xl font-bold text-primary mb-6">
      Get In Touch
    </h2>
    
    <p class="text-lg text-secondary max-w-xl mx-auto mb-8">
      Have questions, comments, or just want to say hello? I'd love to hear from you!
    </p>
    
    <!-- Formulario de contacto -->
    <Card class="max-w-lg mx-auto">
      <form id="contact-form">
        <div class="mb-6">
          <label for="name" class="block text-sm font-medium text-primary text-left mb-1">
            Full Name
          </label>
          <input 
            type="text" 
            name="name" 
            id="name" 
            required 
            class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-all"
          >
        </div>
        
        <div class="mb-6">
          <label for="contact-email" class="block text-sm font-medium text-primary text-left mb-1">
            Email Address
          </label>
          <input 
            type="email" 
            name="email" 
            id="contact-email" 
            required 
            class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-all"
          >
        </div>
        
        <div class="mb-6">
          <label for="message" class="block text-sm font-medium text-primary text-left mb-1">
            Message
          </label>
          <textarea 
            name="message" 
            id="message" 
            rows="5" 
            required 
            class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-all resize-vertical"
          ></textarea>
        </div>
        
        <Button type="submit" variant="primary" class="w-full">
          Send Message
        </Button>
        
        <p id="contact-form-message" class="mt-4 text-sm"></p>
      </form>
    </Card>
    
    <!-- Enlaces sociales -->
    {socialLinks.length > 0 && (
      <div class="mt-10">
        <p class="text-secondary">You can also find me on social media:</p>
        <div class="flex justify-center space-x-6 mt-4">
          {socialLinks.map(link => (
            <a 
              href={link.href} 
              class="text-accent hover:text-primary transition-colors"
              aria-label={link.label}
            >
              <!-- Aquí se pueden agregar los iconos SVG específicos -->
              {link.label}
            </a>
          ))}
        </div>
      </div>
    )}
  </div>
</Section>

<script>
  // Manejo del formulario de contacto
  document.addEventListener('DOMContentLoaded', function() {
    const contactForm = document.getElementById('contact-form');
    const contactFormMessage = document.getElementById('contact-form-message');
    
    if (contactForm && contactFormMessage) {
      contactForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Aquí iría la lógica real de envío del formulario
        contactFormMessage.textContent = '¡Gracias por tu mensaje! Te responderé pronto.';
        contactFormMessage.className = 'mt-4 text-sm text-green-600';
        
        // Limpiar el formulario
        contactForm.reset();
        
        // Limpiar el mensaje después de 5 segundos
        setTimeout(() => { 
          contactFormMessage.textContent = ''; 
        }, 5000);
      });
    }
  });
</script>
