<script>
  // Manejo del formulario de newsletter
  document.addEventListener('DOMContentLoaded', function() {
    const newsletterForm = document.getElementById('newsletter-form');
    const newsletterMessage = document.getElementById('newsletter-message');
    
    if (newsletterForm && newsletterMessage) {
      newsletterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Aquí iría la lógica real de suscripción
        newsletterMessage.textContent = '¡Gracias por suscribirte! Te mantendremos informado.';
        newsletterMessage.className = 'mt-4 text-sm text-green-600';
        
        // Limpiar el mensaje después de 5 segundos
        setTimeout(() => { 
          newsletterMessage.textContent = ''; 
        }, 5000);
      });
    }
  });
</script>
