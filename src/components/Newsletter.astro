---
// Sección de newsletter
import Section from './ui/Section.astro';
import Button from './ui/Button.astro';
---

<Section id="news" background="white">
  <div class="text-center">
    <div id="newsletter">
      <h2 class="text-3xl sm:text-4xl font-bold text-primary mb-6">
        Stay Connected
      </h2>
      
      <p class="text-lg text-secondary max-w-xl mx-auto mb-8">
        Want to receive updates on my writing journey, news about my upcoming book, exclusive content, and maybe a sneak peek or two? Subscribe to my newsletter!
      </p>
      
      <form id="newsletter-form" class="max-w-lg mx-auto">
        <div class="flex flex-col sm:flex-row gap-4">
          <input 
            type="email" 
            id="email-input" 
            name="email" 
            placeholder="Enter your email address" 
            required 
            class="flex-grow px-4 py-3 rounded-lg border-2 border-gray-300 focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-all"
          >
          <Button type="submit" variant="primary">
            Subscribe Now
          </Button>
        </div>
        <p id="newsletter-message" class="mt-4 text-sm"></p>
      </form>
    </div>
    
